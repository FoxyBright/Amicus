<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login_activity_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.profile.ProfileFragment">

    <LinearLayout
        android:visibility="invisible"
        android:id="@+id/fragment_replace_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.profile.ProfileFragment">

        <fragment
            android:name="com.example.amicus.ClearFragment"
            android:id="@+id/fr_replace"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </fragment>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/profile_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.profile.ProfileFragment">

        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            android:src="@drawable/empty_profile_photo"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Игорь"
            android:textColor="@color/dark_grey"
            android:fontFamily="@font/inter_bold"
            android:layout_gravity="center"/>

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/system_gray"
            android:text="igor@mail.ru"
            android:layout_gravity="center"/>

        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/profile_set_bt"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_margin="5dp"
                    android:text="@string/profile"
                    android:fontFamily="@font/inter_bold"
                    android:drawableTop="@drawable/profile_settings"
                    android:paddingTop="40dp"
                    android:background="@drawable/white_corner"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/auto_set_bt"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_margin="5dp"
                    android:text="@string/auto"
                    android:fontFamily="@font/inter_bold"
                    android:drawableTop="@drawable/automobile_settings"
                    android:paddingTop="40dp"
                    android:background="@drawable/white_corner"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/pay_set_bt"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_margin="5dp"
                    android:text="@string/pay"
                    android:fontFamily="@font/inter_bold"
                    android:drawableTop="@drawable/payment_settings"
                    android:paddingTop="40dp"
                    android:background="@drawable/white_corner"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/app_set_bt"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_margin="5dp"
                    android:text="@string/app"
                    android:fontFamily="@font/inter_bold"
                    android:drawableTop="@drawable/app_settings"
                    android:paddingTop="40dp"
                    android:background="@drawable/white_corner"/>

            </LinearLayout>
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/exit_bt"
            android:layout_marginTop="50dp"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:background="@drawable/red_corner_bt"
            android:text="@string/Exit"
            android:textColor="@color/white"
            android:drawableStart="@drawable/exit"
            android:paddingRight="30dp"
            android:paddingHorizontal="20dp"
            android:layout_gravity="center"/>

    </LinearLayout>
</RelativeLayout>